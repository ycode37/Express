<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <title>Document</title>
  </head>
  <body class="bg-zinc-800">

 <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white outliner-none">
        <form action="/create" method="post">
          <input
            type="text"
            class="block w-full px-5 rounded-lg py-2 outline-none bg-zinc-800"
            placeholder="Title"
            name="title"
          />
          <textarea
            name="details"
            class="block w-full rounded-lg px-5 py-2 outline-none resize-none bg-zinc-800 mt-2"
            id=""
            placeholder="Details"
          ></textarea>
          <input
            class="mt-2 bg-blue-600 rounded-md px-5 py-2"
            type="submit"
            value="create TasK"
          />
        </form>
      </div>
    <div class="flex flex-wrap gap-3 m-5">
      <% if (files.length > 0){%> <% files.forEach(function(val){ %>
      <div class="task flex flex-wrap w-72 px-3 py-4 bg-zinc-700 rounded-md">
        <h1 class="text-white text-3xl tracking-tighter"><%= val%></h1>
        <div class="flex w-full justify-between items-center">
          <a class="text-blue-500" href="/file/<%= val %>">Read More</a>
          <a class="text-zinc-600" href="/edit/<%= val %>">edit</a>
        </div>
      </div>
      <% })%> <% } else {%>
      <h1>No value</h1>
      <% }%>
    </div>
  </body>
</html>
