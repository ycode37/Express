<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Users List</title>
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
      <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
      <div class="users flex flex-wrap gap-3">
        <% users.forEach(function(user){%>
        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
          <div class="w-full h-52 rounded-lg bg-zinc-700 overflow-hidden">
            <img src="<%= user.image%>" alt="" />
          </div>

          <h3 class="text-xl mt-3 tracking-tighter"><%= user.name%></h3>
          <h5 class="text-zinc-400"><%= user.email%></h5>
          <div class="flex gap-3 mt-7">
            <a
              class="text-blue-400 hover:underline"
              href="/users/edit/<%= user._id %>"
              >Edit User</a
            >
            <a
              class="text-red-400 hover:underline"
              href="/users/delete/<%= user._id %>"
              >Delete User</a
            >
          </div>
        </div>
        <% })%>
      </div>
    </div>
  </body>
</html>
